@model ProjePersonelModel.Entities.PersonnelAddress
@{
    ViewData["Title"] = "PersonelAdresEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Personel Adres Ekle</h1>



<form asp-action="PersonelAdresEkle" method="post" class="w-75 mx-auto p-3">
    <div class="form-group">
        <label>Adres Eklenecek Personel Seçiniz: </label>

        <select asp-for="PersonnelID" class="form-control" asp-items="ViewBag.Personeller">
            <option hidden value="-1"> Seçiniz </option>
        </select>
    </div>
    <div class="form-group">
        <label>Adres: </label>

        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama: </label>

        <input type="text" asp-for="AddressDescription" class="form-control">
    </div>
   

    <button type="submit" class="btn btn-info btn-sm">  Kaydet</button>
</form>




