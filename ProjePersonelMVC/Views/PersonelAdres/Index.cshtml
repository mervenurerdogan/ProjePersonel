@model List<ProjePersonelModel.Entities.PersonnelAddress>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Personel Adres Listesi</h1>

@if (Model.Count != 0)
{


    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Personel Adı</th>
                <th>Adres</th>
                <th>Açıklama</th>
                <th>Düzenle</th>
                <th>Detaylar</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Personnel.Name @item.Personnel.Surname </td>
                    <td>@item.Address</td>
                    <td>@item.AddressDescription</td>

                    <td>
                        <a asp-action="PhoneAdresGuncelle" asp-controller="PersonelAdres" asp-route-id="@item.AdressID" class="btn btn-success btn-sm"> Düzenle</a>
                    </td>
                    <td>
                        <a asp-action="GetByPersonelID" asp-controller="PersonelAdres" asp-route-id="@item.AdressID" class="btn btn-info btn-sm"> Detaylar</a>
                    </td>
                    <td>
                        <a asp-action="DepartmanSil" asp-controller="PersonelAdres" asp-route-id="@item.AdressID" class="btn btn-warning btn-sm"> Sil</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde adres bulunamadı!
        </p>
        <a asp-action="PersonelAdresEkle" asp-controller="PersonelAdres" class="btn btn-sm btn-info my-2">  Yeni Adres Ekle</a>
    </div>
}
<a asp-action="PersonelAdresEkle" asp-controller="PersonelAdres" class="btn btn-sm btn-info ">  Yeni Adres Ekle</a>

