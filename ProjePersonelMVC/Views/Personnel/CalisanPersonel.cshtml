@model List<ProjePersonelModel.Entities.Personnel>
@{
    ViewData["Title"] = "CalisanPersonel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Çalışan Personel Listesi</h1>

@if (Model.Count != 0)
{


    <table class="table table-striped table-bordered table-hover" style="width:80rem;">
        <thead>
            <tr>
                <th>Kimlik Numarası</th>
                <th>Ad Soyad</th>
                <th>Doğum Günü</th>
                <th>Doğum Yeri</th>
                <th>Eğitim Durumu</th>
                <th>İş Başlama Tarihi</th>
                <th>İş Bitiş Tarihi</th>
                <th>Cinsiyet</th>
                <th>E-Posta</th>
                <th>Personel Özet</th>
                <th>Görev</th>
                <th>Departman</th>
            


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdentityNumber</td>
                    <td>@item.Name  @item.Surname</td>
                    <td>@item.BirthDate.ToString("D")</td>
                    <td>@item.PlaceOfBirth.CityName</td>
                    <td>@item.EducationStatus.EducationStatusName</td>
                    <td>@item.StartWorkDate</td>
                    <td>@item.FinishWorkDate</td>
                    <td>@item.Gender.GenderName</td>

                    <td>@item.Email</td>
                    <td>@item.SummaryInfoPersonnel</td>

                    <td>@item.Departman.DepartmanName</td>
                    <td>@item.Mission.MissionName</td>
                 



                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde personel bulunamadı!
        </p>

    </div>
}

<a asp-action="Index" asp-controller="Personnel" class="btn btn-sm btn-info my-26">  Personel Anasayfaya Dön </a>


