@model List<ProjePersonelModel.Entities.Mission>
@{
    ViewData["Title"] = "GetByDepartmanID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>

<h1>Departman Detay </h1>

@if (Model.Count != 0)
{


    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Departman Adı</th>
                <th>Açıklama</th>
                <th>Görev Adı</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Departman.DepartmanName</td>
                    <td>@item.Departman.Description</td>
                    <td>@item.MissionName</td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde departman bulunamadı!
        </p>
      
    </div>
}
<a asp-action="Index" asp-controller="Departman" class="btn btn-sm btn-info my-2"> <i class="fas fa-plus-circle mr-2"></i> Anasayfaya Dön</a>
