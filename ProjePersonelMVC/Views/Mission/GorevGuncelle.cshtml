@model ProjePersonelModel.Entities.Mission
@{
    ViewData["Title"] = "GorevGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Görev Güncelle</h1>

<form asp-action="GorevGuncelle" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.MissionID" />
    <div class="form-group">
        <label for="MissionName" class="form-label">Adres</label>
        <input type="text" class="form-control" asp-for="MissionName">
    </div>
    <div class="form-group">
        <label for="Description" class="form-label">Açıklama</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>


    <div class="form-group">
        <label for="DepartmanID" class="form-label">Departman Listesi  </label>
        <select asp-for="DepartmanID" class="form-control" asp-items=" ViewBag.Departmanlar">
            <option hidden value="-1"> Seçiniz </option>
        </select>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsActive">
        <label class="form-check-label" for="gridCheck">
            Görev Aktif mi?
        </label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Departman Bilgilerini Düzenle</button>
    </div>
</form>