@model ProjePersonelModel.Entities.Mission
@{
    ViewData["Title"] = "GorevGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Görev Güncelle</h1>



<form asp-action="GorevGuncelle" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.MissionID" />
    <div class="form-group">
        <label>Görev Adı: </label>

        <input type="text" asp-for="MissionName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama: </label>

        <textarea asp-for="Description" class="form-control"> </textarea>
    </div>
    <div class="form-group">
        <label>Görev Departmanını Seçiniz: </label>
        <span asp-validation-for="DepartmanID" class="text-danger"> </span>
        <select asp-for="DepartmanID" class="form-control" asp-items=" ViewBag.Departmanlar">
            <option hidden value="-1"> Seçiniz </option>
        </select>
    </div>

   
</form>

<button type="submit" class="btn btn-info btn-sm"> <i class="fas fa-check-circle mr-2"></i> Kaydet</button>
