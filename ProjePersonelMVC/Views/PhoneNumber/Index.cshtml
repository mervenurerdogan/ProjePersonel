@model List<ProjePersonelModel.Entities.PersonelPhoneNumber>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Personel İletişim Listesi</h1>

@if (Model.Count != 0)
{


    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Personel Adı</th>
                
                <th>Numara</th>
                <th>Açıklama</th>
                <th>Düzenle</th>
                <th>Detaylar</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Personnel.Name @item.Personnel.Surname </td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.NumberDescription</td>
                    
                    <td>
                        <a asp-action="PhoneNumberGuncelle" asp-controller="PhoneNumber" asp-route-id="@item.PersonnelPhoneNumberID" class="btn btn-warning btn-sm"> Düzenle</a>
                    </td>
                    <td>
                        <a asp-action="GetByPersonelID" asp-controller="PhoneNumber" asp-route-id="@item.PersonnelPhoneNumberID" class="btn btn-info btn-sm"> Detaylar</a>
                    </td>
                    <td>
                        <a asp-action="NumaraSil" asp-controller="PhoneNumber" asp-route-id="@item.PersonnelPhoneNumberID" class="btn btn-warning btn-sm"> Sil</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde görev bulunamadı!
        </p>
        <a asp-action="PhoneNumberEkle" asp-controller="PhoneNumber" class="btn btn-sm btn-info my-2"> <i class="fas fa-plus-circle mr-2"></i> Yeni Numara Ekle</a>
    </div>
}
<a asp-action="PhoneNumberEkle" asp-controller="PhoneNumber" class="btn btn-sm btn-info my-2"> <i class="fas fa-plus-circle mr-2"></i> Yeni Numara Ekle</a>
