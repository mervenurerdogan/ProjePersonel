@model ProjePersonelModel.Entities.PersonelPhoneNumber
@{
    ViewData["Title"] = "PhoneNumberGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PhoneNumberGuncelle</h1>


<form asp-action="PhoneNumberGuncelle" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.PersonnelPhoneNumberID" />
    <div class="form-group">
        <label for="PhoneNumber" class="form-label">Adres</label>
        <input type="text" class="form-control" asp-for="PhoneNumber">
    </div>
    <div class="form-group">
        <label for="NumberDescription" class="form-label">Açıklama</label>
        <input type="text" class="form-control" asp-for="NumberDescription">
    </div>


    <div class="form-group">
        <label for="PersonnelID" class="form-label">Personel Listesi  </label>
        <select asp-for="PersonnelID" class="form-control" asp-items=" ViewBag.Personeller">
            <option hidden value="-1"> Seçiniz </option>
        </select>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsActive">
        <label class="form-check-label" for="gridCheck">
            Personel hala numarayı kullanıyor mu?
        </label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Personel İletişim Bilgilerini Düzenle</button>
    </div>
</form>