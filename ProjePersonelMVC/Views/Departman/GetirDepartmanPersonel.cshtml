@model List<ProjePersonelModel.Entities.Departman>
@{
    ViewData["Title"] = "GetirDepartmanPersonel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Getir Departmandaki Personeller</h1>




@if (Model.Count != 0)
{


    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Departman Adı</th>
                <th>Açıklama</th>
                <th>Personel</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepartmanName</td>
                    <td>@item.Description</td>
                    <td>
                        @if (item.Personnels.Count > 0)
                        {
                            <ul>
                                @foreach (var i in item.Personnels)
                                {
                                    <li>@i.Name @i.Surname</li>
                                }
                            </ul>

                           
                        }
                        else
                        {
                        <div class="text-center mt-4">
                            <p >
                                Bu departmanda çalışan personel yok!
                            </p>

                        </div>
                        }

                    </td>
                  
                  

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde departman bulunamadı!
        </p>

    </div>
}
<a asp-action="Index" asp-controller="Departman" class="btn btn-sm btn-info ">  Departmanlar Sayfasına Dön</a>
