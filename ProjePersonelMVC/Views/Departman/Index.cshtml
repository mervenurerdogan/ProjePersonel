@model List<ProjePersonelModel.Entities.Departman>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@if (Model.Count != 0)
{
   
    
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Departman Adı</th>
                <th>Açıklama</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepartmanName</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="GuncelleDepartman" asp-controller="Departman" asp-route-id="@item.DepartmanID" class="btn btn-warning btn-sm"> Düzenle</a>
                    </td>
                    <td>
                        <a asp-action="SilDepartman" asp-controller="Departman" asp-route-id="@item.DepartmanID" class="btn btn-danger btn-sm"> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Sistemde departman bulunamadı!
        </p>
        <a asp-action="EkleDepartman" asp-controller="Departman" class="btn btn-sm btn-info my-2"> <i class="fas fa-plus-circle mr-2"></i> Yeni Departman Ekle</a>
    </div>
}
<a asp-action="EkleDepartman" asp-controller="Departman" class="btn btn-sm btn-info my-2"> <i class="fas fa-plus-circle mr-2"></i> Yeni Departman Ekle</a>
